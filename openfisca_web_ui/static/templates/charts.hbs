<div class="form-inline" role="form">
  <div class="form-group">
    <select class="form-control" name="chart" title="Graphique">
{{#charts}}
      <option{{#active}} selected="selected"{{/active}} value="{{slug}}">{{title}}</option>
{{/charts}}
    </select>
  </div>
{{#isUserAuthenticated}}
  <div class="form-group">
    <select class="form-control" name="test_case" title="Simulation">
  {{#testCases}}
      <option{{#isCurrentTestCase}} selected="selected"{{/isCurrentTestCase}} value="{{slug}}">{{title}}</option>
  {{/testCases}}
    </select>
  </div>
{{/isUserAuthenticated}}
  <div class="form-group">
    <input class="form-control" max="{{maxYear}}" min="{{minYear}}" name="year" placeholder="{{defaultYear}}" step="1"
      title="Année" type="number" value="{{year}}">
  </div>
  <div class="form-group">
    <select class="form-control" name="legislation" title="Législation">
      <option value="">Législation par défaut</option>
{{#legislations}}
      <option{{#active}} selected="selected"{{/active}} value="{{url}}">{{title}}</option>
{{/legislations}}
    </select>
  </div>
</div>
<hr>
<div class="chart-wrapper"></div>
<hr>
<div class="form-inline pull-right" role="form">
{{#displaySaveButton}}
  <div class="form-group">
    <button class="btn btn-primary sign-in">Enregistrer</button>
  </div>
{{/displaySaveButton}}
  <div class="form-group">
    <button class="btn btn-default" data-toggle="modal" data-target="#export-modal">Exporter</button>
  </div>
</div>
<div class="alert alert-info overlay"></div>
